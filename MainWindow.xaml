<Window x:Class="CounterTotalSum_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterTotalSum_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="purchasePriceTextBox"  Margin="30"  Width="400"></TextBox>
            <Button Name="countButton" Width="100" Click="countButton_Click" Style="{StaticResource Button}">Рассчитать</Button>
            <TextBox Name="totalPriceTextBox" Margin="20" Width="200" IsReadOnly="true"></TextBox>
        </StackPanel>
    </Grid>
</Window>
